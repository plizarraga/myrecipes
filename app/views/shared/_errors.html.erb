<%if obj.errors.any? %>
	<div class="row">
		<div class="alert alert-danger col-md-8 col-md-offset-2">
	        <a class="close" data-dismiss="alert">&#215;</a>
			<h5>Please correct the followinf errors:</h5>
			<ul>
				<% obj.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
				<% end %>
			</ul>
		</div>
	</div>
<% end %>